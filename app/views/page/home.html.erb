<h1>Dynamic Select</h1>

<%= form_with do |form| %>

    <div style="margin:20px 0px;">
        <label><strong>Model</strong></label>
        <%= select_tag :model_name, options_for_select([ "Please Select a Model", "Announcement", "Event" ]), { class: 'remote-select', data: { target: '#record_id' }} %>
    </div>

    <div style="margin:20px 0px;">
        <label><strong>Record</strong></label>
        <%= collection_select(:record, :id, @records, :id, :title, {prompt: true}, {:class=>"record_select"}) %>
    </div>

    <%= submit_tag "Submit" %>
    
  <% end %>
